{
  "$schema": "http://json.schemastore.org/template",
  "author": "Xubb",
  "classifications": [ "ElasticSearchApi" ],
  "name": "myESApiTemplate",
  "identity": "myESApiTemplate", //模板唯一标识
  "groupIdentity": "myESApiTemplateGroup", 
  "shortName": "myESApi", //【修改】短名称，使用 dotnet new <shortName> 安装模板时的名称
  "tags": {
    "language": "C#", 
    "type": "project" 
  },
  "sourceName": "ElasticSearch7Template", //【修改】在使用 -n 选项时，会替换模板中项目的名字
  "preferNameDirectory": true,
   "sources": [
      {
          "modifiers": [
              {
                  "exclude": { //排除下面的文件
                     "default": [ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.user", ".vs/**/*", "NPoco/**/*"]
                  }
              }
          ]
      }
    ]    
}